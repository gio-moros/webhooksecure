{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "WebhookSecurity": "Server=(localdb)\\mssqllocaldb;Database=WebhookSecurity;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "WebhookSecurity": {
    "DefaultTokenExpiration": "30.00:00:00",
    "TokenHashingSalt": "change-this-to-a-secure-value-in-production",
    "MaxTokensPerClient": 5,
    "RateLimitWindow": "00:01:00",
    "MaxRequestsPerWindow": 100
  }
}
